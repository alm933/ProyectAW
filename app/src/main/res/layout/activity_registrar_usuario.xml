<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarActivityUsuario"
    android:orientation="vertical">

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint=" Nombre de Producto"
        android:minHeight="48dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/userLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="codigo de Producto"
        android:minHeight="48dp"
        android:nextFocusForward="@id/userName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Stock"
        android:minHeight="48dp"
        android:nextFocusForward="@id/userLastName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Precio "
        android:minHeight="48dp"
        android:nextFocusForward="@id/userEmail"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/userAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Precio(Descuento)"
        android:minHeight="48dp"
        android:nextFocusForward="@id/userPassword"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/userPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="descripcion"
        android:minHeight="48dp"
        android:nextFocusForward="@id/userAddress"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnRegisteruser"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:nextFocusForward="@id/userPhone"
        android:text="Registrase"
        android:textAlignment="center" />
</LinearLayout>